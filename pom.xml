<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>eu.europa.ec.fisheries.uvms.spatial</groupId>
    <artifactId>spatial</artifactId>
    <version>0.4.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <description>Spatial module as part of UnionVMS</description>

    <developers>
        <developer>
            <name>Gregory Rinaldi</name>
            <email>gregory.rinaldi@ordina.be</email>
        </developer>
		<developer>
            <name>Georgi Georgiev</name>
            <email>georgi.georgiev@ordina.be</email>
        </developer>
    </developers>

    <properties>
        <!-- The spatial name is used as a common point to rename the application alias visible in USM-->
        <spatial.name>Spatial</spatial.name>
        <spatial.model>1.0.3-SNAPSHOT</spatial.model>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <javaee.version>7.0</javaee.version>
        <sl4j.version>1.7.12</sl4j.version>
        <logback.version>1.1.2</logback.version>
        <mapstruct.version>1.0.0.Final</mapstruct.version>
        <jackson.version>2.6.0</jackson.version>
        <logback.core.version>1.1.2</logback.core.version>
        <asset.module.version>1.0.0</asset.module.version>
        <movement.model.version>1.0.0</movement.model.version>
        <application.name>${project.parent.artifactId}</application.name>
        <application.version>${project.parent.version}</application.version>
        <application.logfile>/app/logs/${project.parent.artifactId}/${project.parent.artifactId}.log</application.logfile>
        <application.error.logfile>/app/logs/${project.parent.artifactId}/${project.parent.artifactId}-error.log</application.error.logfile>
        <application.logfile.boot>/app/logs/${project.parent.artifactId}/${project.parent.artifactId}-boot.log</application.logfile.boot>
        <hibernate.version>4.3.5.Final</hibernate.version>
        <hibernate-spatial.version>4.3</hibernate-spatial.version>
        <geotools.version>14-M1</geotools.version>
        <uvms.commons.version>1.6-SNAPSHOT</uvms.commons.version>
        <hibernate.validator.version>5.2.1.Final</hibernate.validator.version>
        <usm4uvms.version>1.0.1-SNAPSHOT</usm4uvms.version>
        <usm_deployment_descriptor_force_update>false</usm_deployment_descriptor_force_update>
        <release.branch.name>uvms-1.0.0</release.branch.name>
    </properties>

    <dependencyManagement>

        <dependencies>
         

        </dependencies>

    </dependencyManagement>

    <dependencies>

    </dependencies>

    	
    <distributionManagement>
        <repository>
            <id>digit-releases</id>
            <name>DG DIGIT Repository</name>
            <url>https://webgate.ec.europa.eu/CITnet/nexus/content/repositories/mare/</url>
        </repository>
        <snapshotRepository>
            <id>digit-snapshots</id>
            <name>DG DIGIT Snapshot Repository</name>
            <url>https://webgate.ec.europa.eu/CITnet/nexus/content/repositories/mare-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>

		<!--connection>scm:svn:https://webgate.ec.europa.eu/CITnet/svn/UNIONVMS/tags/spatial-1.0.0.final</connection-->
		<developerConnection>scm:svn:https://webgate.ec.europa.eu/CITnet/svn/UNIONVMS/trunk/Modules/Spatial/APP</developerConnection>
		<!--url>https://webgate.ec.europa.eu/CITnet/svn/UNIONVMS/tags/spatial-1.0.0.final</url-->
       
    </scm>


    <build>
        <pluginManagement>
            <plugins>
                <!-- compiler plugin -->
               
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>3.4</version>
                <configuration>
                    <goalPrefix>plugin</goalPrefix>
                    <outputDirectory>target/dir</outputDirectory>
                </configuration>
            </plugin>
    
        </plugins>
    </build>

    <!-- add repositories for JTS and Hibernate Spatial and Hibernate (JBoss) -->
    <repositories>
        <repository>
            <id>OSGEO GeoTools repo</id>
            <url>http://download.osgeo.org/webdav/geotools</url>
        </repository>
        <repository>
            <id>Hibernate Spatial repo</id>
            <url>http://www.hibernatespatial.org/repository</url>
        </repository>
        <!-- add JBOSS repository for easy access to Hibernate libraries -->
        <repository>
            <id>JBOSS</id>
            <url>https://repository.jboss.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

    <modules>
        <module>APP</module>
        <module>LIQUIBASE</module>
    </modules>
</project>