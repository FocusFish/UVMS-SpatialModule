<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="padhyad" id="1439890745706-42">
        <createTable tableName="report_connect_service_areas">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="report_layer_mapping_pkey"/>
            </column>
            <column name="report_connect_spatial_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="service_layer_id" remarks="soft link to the Layers table" type="INT"/>
            <column name="area_group_id" type="INT"/>
            <column name="sql_filter" remarks="this will contain the actual area ID in a particular area table" type="TEXT"/>
            <column defaultValueNumeric="0" name="layer_order" remarks="The order of the layer group" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="is_background" type="BPCHAR(1)"/>
        </createTable>
    </changeSet>
    
    <changeSet author="padhyad" id="1439890745706-63">
        <addForeignKeyConstraint baseColumnNames="report_connect_service_areas_id" baseTableName="report_layer_config" constraintName="report_layer_config_report_connect_service_areas_id_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="report_connect_service_areas"/>
    </changeSet>

</databaseChangeLog>
